# VNPT AI Credentials - AUTO-LOADED FROM .secret/api-keys.json
# No need to set these manually! The provider automatically loads from JSON file.
# Only uncomment if you want to override JSON credentials for a specific model.

# VNPT_ACCESS_TOKEN=YOUR_VNPT_ACCESS_TOKEN
# VNPT_SMALL_ACCESS_TOKEN=YOUR_SMALL_ACCESS_TOKEN
# VNPT_SMALL_TOKEN_ID=YOUR_SMALL_TOKEN_ID
# VNPT_SMALL_TOKEN_KEY=YOUR_SMALL_TOKEN_KEY
# VNPT_LARGE_ACCESS_TOKEN=YOUR_LARGE_ACCESS_TOKEN
# VNPT_LARGE_TOKEN_ID=YOUR_LARGE_TOKEN_ID
# VNPT_LARGE_TOKEN_KEY=YOUR_LARGE_TOKEN_KEY
# VNPT_EMBEDDING_ACCESS_TOKEN=YOUR_EMBEDDING_ACCESS_TOKEN
# VNPT_EMBEDDING_TOKEN_ID=YOUR_EMBEDDING_TOKEN_ID
# VNPT_EMBEDDING_TOKEN_KEY=YOUR_EMBEDDING_TOKEN_KEY
# VNPT_TOKEN_ID=YOUR_VNPT_TOKEN_ID
# VNPT_TOKEN_KEY=YOUR_VNPT_TOKEN_KEY

# General Provider Configuration
CHAT_PROVIDER=vnpt
EMBEDDING_PROVIDER=vnpt
MODEL_NAME=vnptai-hackathon-small
HUGGINGFACE_EMBEDDING_MODEL=all-MiniLM-L6-v2

# Performance and Rate Limiting
CONCURRENT_REQUESTS=2
SLEEP_TIME=0

# Domain-Based Routing (NEW!)
# Enable intelligent routing based on question classification domains
# - SAFETY_REFUSAL: Uses small model with deterministic parameters
# - NON_RAG: Uses large model with Chain-of-Thought prompt for math/code
# - RAG_NECESSITY: Uses large model with RAG for knowledge questions
DOMAIN_ROUTING_ENABLED=true

# Infinite Retry Configuration (for handling VNPT quota limits)
VNPT_INFINITE_RETRY=true
VNPT_RETRY_INITIAL_DELAY=5 # seconds
VNPT_RETRY_MAX_DELAY=300 # seconds

# LLM Hyperparameters  
LLM_TEMPERATURE=0.5
LLM_TOP_P=0.7
LLM_MAX_TOKENS=2048
LLM_N=1
LLM_SEED=416

# Logging
LOG_LEVEL=INFO

# Retrieval-Augmented Generation (RAG) Configuration
RAG_ENABLED=false
USE_PRE_RETRIEVED_CONTEXT=false
TOP_K_RAG=1
FAISS_INDEX_PATH=knowledge_base/faiss_index.bin
TEXT_CHUNKS_PATH=knowledge_base/text_chunks.json
RETRIEVE_DOCS_DIR=docs

# Advanced RAG Features
RERANK_ENABLED=false
CROSS_ENCODER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2
RERANK_TOP_K=10

# Hybrid Search (Semantic + Keyword)
HYBRID_SEARCH_ENABLED=false
BM25_INDEX_PATH=knowledge_base/bm25_index.pkl
SEMANTIC_WEIGHT=0.5
KEYWORD_WEIGHT=0.5
